<a class="btn btn-primary btn-sm" href="/UserAccount/Create">New User</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Password</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var client in Model.listClients)
    {
        <tr>
            <td>@client.Id</td>
            <td>@client.Username</td>
            <td>@client.Email</td>
            <td>@client.Password</td>
            @*<td>IDIDIIDIDID</td>
        <td>EMALALLALL</td>
        <td>d</td>*@
            
            <td>
                <a class="btn btn-primary btn-sm" href="/UserList/Edit?Id=@client.Id">Edit</a>
                <a class="btn btn-primary btn-sm" href="/UserList/Delete?Id=@client.Id">Delete</a>
            </td>
        </tr>
    }

    </tbody>
</table>